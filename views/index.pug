extends layout

block content
    main(class="col-12 col-md-9 col-xl-8 py-md-3 pl-md-5 bd-content")
    div(class="container")
        div(class="form-group")
            select(class="custom-select" id="selectquery" style="font-size: 1.7rem;")
                option GET /v2/accounts/[Principal]
        
        div(id="form")
            form(action="./form/accounts" method="POST" id="accountsForm")
                div(class="form-group")
                    label(for="server") Server:
                    input(
                    type="text"
                    id="server"
                    name="server"
                    class="form-control"
                    value="localhost"
                    )
                div(class="form-group")
                    label(for="principal") Principal:
                    input(
                        type="text"
                        id="principal"
                        name="principal"
                        class="form-control"
                    )
                button(type="submit" class="btn btn-primary" value="Submit") Send
        br
        br
        div(id="resultbox")
            h3 Result
            div(class="media border p-3")
                div(id="result") 
            input(type="button" class="mt-3 btn btn-primary" id="clear" value="Clear")